<p id="notice"><%= notice %></p>

<div class="card" style="width: 30rem;">
  <h5 class="card-header"><%= @customer.name %></h5>
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted"><strong>Mobile: </strong><%= @customer.contact %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><strong>Address: </strong><%= @customer.address %></h6>
    <p class="card-text">
      <strong>Cattle Type: </strong> <%= @customer.cattle_type.capitalize %>
    </p>
    <%= link_to 'Back', customers_path, class: 'card-link btn btn-secondary' %>
    <%= link_to 'Edit', edit_customer_path(@customer), class: 'card-link btn btn-primary' %>
  </div>
</div>
