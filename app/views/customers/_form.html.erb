<%= form_with(model: customer, local: true, id: 'new_customer_form') do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', required: true, tabIndex: 1 %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :contact, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :contact, class: 'form-control', required: true, tabIndex: 2 %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :address, class: 'form-control', required: true, tabIndex: 3 %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :cattle_type, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :cattle_type, options_for_select(["COW", "BUFFALO"], selected: (@customer.cattle_type unless @customer.nil?)),
                      {include_blank: true }, class: 'form-control',
                      required: true, tabIndex: 4 %>
    </div>
  </div>

  <div class="actions" class="">
    <%= form.submit 'Submit', class: 'btn btn-primary pull-right', tabIndex: 5 %>
  </div>
<% end %>
